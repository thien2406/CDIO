@page
@model WebApplication1.Models.EnergyMonitoringModel
@{
    ViewData["Title"] = "Energy Monitoring Dashboard";
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<div class="container mt-5">
    <h2 class="text-center mb-4">Energy Monitoring Dashboard</h2>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Battery Percent</h5>
                    <p class="card-text" id="batteryPercent">@Model.BatteryPercent%</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Voltage Output</h5>
                    <p class="card-text" id="voltageInput">@Model.VoltageInput V</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Current Input</h5>
                    <p class="card-text" id="currentInput">@Model.CurrentInput A</p>
                </div>
            </div>
        </div>
        <!-- Thêm các card cho các thông số khác tương tự -->
    </div>
</div>

<!-- Bootstrap JS and Popper.js (Optional, for dropdown, popovers, and tooltips) -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

@section Scripts {
    <script>
        // Đoạn mã JavaScript để lấy dữ liệu từ API và cập nhật giao diện
        fetch('/api/EnergyData')
            .then(response => response.json())
            .then(data => {
                document.getElementById('batteryPercent').textContent = data.batteryPercent + '%';
                document.getElementById('voltageInput').textContent = data.voltageInput + ' V';
                document.getElementById('currentInput').textContent = data.currentInput + ' A';
                // Cập nhật các thông số khác tương tự
            });
    </script>
}
